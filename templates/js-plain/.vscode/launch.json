{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Bun",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "runtimeExecutable": "bun",
            "runtimeArgs": ["--watch"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug JavaScript",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "runtimeExecutable": "bun",
            "console": "integratedTerminal",
            "stopOnEntry": false
        }
    ]
}
