{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch TypeScript with Bun",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.ts",
            "runtimeExecutable": "bun",
            "runtimeArgs": ["--watch"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug TypeScript",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.ts",
            "runtimeExecutable": "bun",
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "Type Check",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
            "args": ["--noEmit"],
            "console": "integratedTerminal"
        }
    ]
}
